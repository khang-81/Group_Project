<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HanoiStudentGigs"
        tools:targetApi="31">

        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.HanoiStudentGigs.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.RoleSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.HanoiStudentGigs.NoActionBar" />

        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.HanoiStudentGigs.NoActionBar" />

        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".activities.LoginActivity" />

        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false"
            android:parentActivityName=".activities.LoginActivity" />

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.HanoiStudentGigs.NoActionBar" />

        <activity
            android:name=".activities.JobDetailActivity"
            android:exported="false"
            android:parentActivityName=".activities.TrangChuActivity"
            android:theme="@style/Theme.HanoiStudentGigs.NoActionBar" />

        <activity
            android:name=".activities.PostJobActivity"
            android:exported="false"
            android:parentActivityName=".activities.TrangChuActivity" />

        <activity
            android:name=".activities.ProfileEditActivity"
            android:exported="false"
            android:parentActivityName=".activities.ProfileEditActivity" />

        <activity
            android:name=".activities.SearchActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".activities.FilterActivity"
            android:exported="false"
            android:parentActivityName=".activities.SearchActivity" />

        <activity android:name=".activities.AllJobsActivity" android:exported="false" />
        <activity android:name=".activities.AllApplicantsActivity" android:exported="false" />


        <activity android:name=".activities.DangTinActivity" android:exported="false" />
        <activity android:name=".activities.DsUngVienActivity" android:exported="false" />
        <activity android:name=".activities.QLTinActivity" android:exported="false" />
        <activity android:name=".activities.XemTinActivity" android:exported="false" />
        <activity android:name=".activities.SuaTinActivity" android:exported="false" />

        <activity android:name=".activities.TrangChuActivity" android:exported="false" />


    </application>

</manifest>