<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFF">

    <Button
        android:id="@+id/btnStatsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản Lý Hệ Thống"
        android:textStyle="bold"
        android:enabled="false"
        android:backgroundTint="#3B5A7A"
        android:textColor="#FFF"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewTotalJobs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số tin đăng: ..."
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_work_24"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewTotalApplications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng ứng tuyển: ..."
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_applications_24"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewTotalStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản Student: ..."
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_person_24"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewTotalEmployers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản Employer: ..."
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_business_24"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
