<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header xanh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1976D2"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HanoiStudentGigs"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHÀO MỪNG BẠN ĐÃ QUAY LẠI!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/buttonManageUsers"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="QUẢN LÝ NGƯỜI DÙNG"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1976D2"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/buttonManageCategories"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="QUẢN LÝ DANH MỤC"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1976D2"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/buttonApproveJobs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="KIỂM DUYỆT TIN ĐĂNG"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1976D2"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/buttonViewStats"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="QUẢN LÝ HỆ THỐNG"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1976D2"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/buttonAdminLogout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="ĐĂNG XUẤT"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F44336"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button"/>

</LinearLayout>
