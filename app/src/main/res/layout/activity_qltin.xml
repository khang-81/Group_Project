<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B3E5FC"
        android:gravity="center"
        android:padding="16dp"
        android:text="Hanoi Student Gigs"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:importantForAccessibility="yes" />

    <!-- Tiêu đề chính -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lí tin đăng"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:importantForAccessibility="yes" />

    <!-- Nhãn Đang tuyển -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang tuyển"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:importantForAccessibility="yes" />

    <!-- Danh sách tin Đang tuyển -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewActive"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:contentDescription="Danh sách tin đang tuyển dụng"
        android:nestedScrollingEnabled="false" />

    <!-- Nhãn Đã đóng -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã tuyển / Đã đóng"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:importantForAccessibility="yes" />

    <!-- Danh sách tin Đã đóng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewInactive"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:contentDescription="Danh sách tin đã đóng hoặc đã tuyển"
        android:nestedScrollingEnabled="false" />

</LinearLayout>
