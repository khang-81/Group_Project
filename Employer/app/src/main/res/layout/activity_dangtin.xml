<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->

        <!-- Đăng tin -->

        <TextView
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="#B3E5FC"
            android:gravity="center"
            android:padding="16dp"
            android:text="Hanoi Student Gigs"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng tin"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingTop="16dp" />

        <!-- Tiêu đề -->
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tiêu đề công việc"
            android:inputType="text" />

        <!-- Thông tin công việc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin công việc"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:hint="Địa điểm làm việc" />

        <Spinner
            android:id="@+id/spnJobType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:prompt="@string/choose_job_type" />

        <!-- 2 cột: Linh vực & Kỹ năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/spnField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:prompt="@string/choose_field" />

            <EditText
                android:id="@+id/etSkills"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Kỹ năng" />
        </LinearLayout>

        <!-- Trình độ & Kinh nghiệm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/etLevel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Trình độ" />

            <EditText
                android:id="@+id/etExperience"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Kinh nghiệm" />
        </LinearLayout>

        <!-- Mức lương & Thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/etSalary"
                android:layout_width="48dp"
                android:layout_weight="12"
                android:layout_height="48dp"
                android:hint="Mức lương" />

            <EditText
                android:id="@+id/etTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Thời gian" />
        </LinearLayout>

        <!-- Mô tả công việc -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:gravity="top"
            android:hint="Mô tả công việc"
            android:inputType="textMultiLine" />

        <!-- Hạn nộp hồ sơ -->
        <Spinner
            android:id="@+id/spnDeadline"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:prompt="@string/choose_deadline" />

        <!-- Thông tin liên hệ -->
        <EditText
            android:id="@+id/etContact"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Thông tin liên hệ" />

        <!-- Button đăng tin -->
        <Button
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#1E4976"
            android:text="Đăng tin"
            android:textSize="22sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
