<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6FA"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề ứng dụng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B3E5FC"
            android:gravity="center"
            android:padding="16dp"
            android:text="Hanoi Student Gigs"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Phần: Tin đăng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tin đăng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Tiêu đề công việc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề công việc"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cần Sinh viên thiết kế Logo Freelance"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Thông tin công việc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin công việc"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Địa điểm làm việc -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="225 Tây Sơn, Đống Đa, Hà Nội"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Loại hình công việc -->
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_spinner"
            android:layout_marginBottom="8dp" />

        <!-- Lĩnh vực & Kỹ năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_spinner" />

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner" />
        </LinearLayout>

        <!-- Trình độ & Kinh nghiệm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_spinner" />

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner" />
        </LinearLayout>

        <!-- Mức lương & Thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_spinner" />

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner" />
        </LinearLayout>

        <!-- Mô tả công việc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả công việc"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:hint="- Có nhiều cơ hội thăng tiến..."
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="12dp" />

        <!-- Hạn nộp hồ sơ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hạn nộp hồ sơ"
            android:textStyle="bold"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="01/07/2025"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Thông tin liên hệ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin liên hệ"
            android:textStyle="bold"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="logo@gmail.com"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Nút Quay lại -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:backgroundTint="#1E4976"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:paddingVertical="12dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
